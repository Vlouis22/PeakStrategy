modules = ["nodejs-20", "web", "python-3.11"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[userenv]

[userenv.shared]
FLASK_SECRET_KEY = "dev-secret-key-for-testing"
FLASK_ENV = "development"
FIREBASE_SERVICE_ACCOUNT_PATH = "./service-account-key.json"
CORS_ORIGINS = "[\"http://localhost:5000\", \"https://*.replit.dev\", \"*\"]"
VITE_FIREBASE_AUTH_DOMAIN = "peakstrategy-7a0fb.firebaseapp.com"
VITE_FIREBASE_PROJECT_ID = "peakstrategy-7a0fb"
VITE_FIREBASE_STORAGE_BUCKET = "peakstrategy-7a0fb.firebasestorage.app"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Frontend"

[[workflows.workflow]]
name = "Frontend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd peakstrategy-frontend && npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 3000

[[ports]]
localPort = 5002
externalPort = 3001

[deployment]
deploymentTarget = "static"
build = ["bash", "-c", "cd peakstrategy-frontend && npm run build"]
publicDir = "peakstrategy-frontend/dist"
